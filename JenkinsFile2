
// The name you want to give your Spring Boot application
// Each resource related to your app will be given this name
appName = "hello-java-spring-boot"

pipeline {
    // Use the 'maven' Jenkins agent image which is provided with OpenShift 
    agent any
    stages {
    
        stage('Construir aplicación') {
          steps {
            // Puedes elegir Maven o Gradle según tu proyecto
            sh 'mvn clean package'
          }
        }
        stage('Crear imagen Docker') {
            steps {
              sh 'docker build -t nombre-imagen .'
            }
        }
         stage('login to openshift') {
            steps {
                    openshift.withCluster( 'https://ec2-100-26-153-236.compute-1.amazonaws.com:8443', 'Y1KUsDAJgnc_OmVsyMuS4W3PehLZOgtN51uJgElWPSU' ) {
                        openshift.withProject( 'myproject' ) {
                            echo "Hello from project ${openshift.project()} in cluster ${openshift.cluster()}"
                        }
                    }
            }
        }
        stage('Desplegar en OpenShift') {
            steps {
              sh '''
                    oc login --username=admin --password=admin --server=https://ec2-100-26-153-236.compute-1.amazonaws.com:8443
                    oc project coe-devops
                    oc new-app nombre-imagen
                  '''
             }
        }
    }
}
